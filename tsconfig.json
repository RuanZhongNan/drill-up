{
	"references": [
		{
			"path": "./tsconfig.app.json"
		},
		{
			"path": "./tsconfig.node.json"
		}
	],
	"compilerOptions": {
		"composite": false,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"noEmit": true,
		// "rootDir": "./js",
		// "baseUrl": "./js",
		"outDir": "dist",
		"types": [
			// https://juejin.cn/post/7262322846252613693
			"element-plus/global.d.ts"
		],
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"./drill-project/js/main.js",
		"./drill-project/js/rpg_*.js",
		// "./js/plugins/*.js",
		"./drill-project/js/libs/pixi*.js",
		"./drill-project/js/plugins/MOG_*.js",
		"./drill-project/js/plugins/YEP_*.js",
		"./drill-project/js/plugins/*ruancat*.js",
		// "./js/plugins/Drill_*.js",
	],
	"exclude": [
		// FIXIME: 不得不排除该文件
		"./drill-project/js/plugins/----*.js",
		"./drill-project/js/plugins.js",
		// "./js/libs",
		"./drill-project/data",
		"./drill-project/audio",
		"./drill-project/img",
		"./drill-project/movies",
		"./drill-project/icon",
		"./drill-project/save",
		"./drill-project/index.html",
		"./drill-project/fonts",
		"node_modules"
	]
}